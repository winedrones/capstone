  <body>
    <div class="container">
      <header>
        
        <div class="row" style="margin-bottom:5%;">
          <h1 class="text-center">Records</h1>
        </div>

        <div class="row">
          
          <div class="col-md-3">
            <form role="form">
              <div class="form-group">
                <label for="user-id-input">User ID</label>
                <input type="user-id" id="add-username" class="form-control" placeholder="Enter User ID">
              </div>
              <button type="submit" id="username-submit" class="btn btn-default">Submit</button>
            </form>
          </div>
          
          <div class="col-md-6">
            <h4 class="text-center">View</h4> 
            <div class="text-center">
              <ul class="nav nav-pills center-pills">
                <li><a href="#">Wantlist</a></li>
                <li><a href="#">Collection</a></li>
              </ul>
            </div>
          </div>
          
          <div class="col-md-3" style="margin-top:7%;">
            <h4 class="text-center">Notes</h4>
          </div>
        </div>

      </header>

      <section>
        <div class="row">
         
         <div id="userlist"class="col-md-3">
          <ul class="nav nav-pills">
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="margin-top:50%;">
                Users<span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li>Christian</li>
                <li>Jesse</li>
                <li>Kyle</li>
              </ul>
            </li>
          </ul>
         </div>

         {{#each wants}}<div id="vids" class="col-md-6">
        <iframe width="420" height="315" src="//www.youtube.com/embed/{{youtube}}"frameborder="0" allowfullscreen>
        </iframe>
         </div>{{/each}}

         <div class="col-md-3">
          <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">User Comments</div>
            <div class="panel-body">
              <p>...</p>
            </div>

            <!-- List group -->
            <ul class="list-group">
              <li class="list-group-item">Great track</li>
              <li class="list-group-item">Catchy hook</li>
              <li class="list-group-item">Sick riffs</li>   
              <li class="list-group-item">I want to live in this song!</li>
            </ul>
          </div>
          <textarea class="form-control" rows="3"></textarea>
          <button type="submit" class="btn btn-default">Submit Comments</button>
         </div>
        </div>
      </section>

  </div>
</body>