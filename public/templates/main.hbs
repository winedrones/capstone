<section>
  <div class="row" style="margin-bottom:2%;">
    <h1 class="text-center">Record Pool</h1>
  </div>

  <div class="row rec-img">
    <img src="images/Record2.png" alt="Record Image">
  </div>

  <div class="row">
      <h4 class="text-center">Viewing {{user}}'s {{list}}</h4> 
  </div>
      
  <div class="row">
    <div class="col-xs-12 col-md-4">
        <div>
          <div class="username-form">
            <label for="user-id-input">Discogs Username</label>
            <input type="user-id" id="username" class="form-control" placeholder="Enter Discogs Username">
          </div>
          <input type="image" id="username-submit" src="images/cassette-btn.png" alt="Submit">
          <br>
          <label for="image">&nbsp;Submit</label>
        </div>
        <ul class="nav nav-pills">
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="" style="margin-top:50%;">
              Users<span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
              {{#each usernames}}
              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">{{.}}</a></li>
              {{/each}}
            </ul>
          </li>
        </ul>
      </div>  
      
      <div class="col-xs-12 col-md-8">
        
        <div class="text-center">
          <ul class="nav nav-pills center-pills" id="want-collection">
            <li><a href="#/{{user}}/wantlist/{{first}}" id="wantlist">wantlist</a></li>
            <li><a href="#/{{user}}/collection/{{first}}" id="collection">collection</a></li>
          </ul>
  
          <ul class="pagination">
            <li><a href="#/{{user}}/{{list}}/{{first}}">&laquo;</a></li>
            {{#each pages}}
            <li><a href="#/{{user}}/{{list}}/{{page}}" id="page {{page}}">{{page}}</a></li>
            {{/each}}
            <li><a href="#/{{user}}/{{list}}/{{last}}">&raquo;</a></li>
          </ul>
        </div>

        <div id="youtube-container">
          <div class="row" id="youtube-vids">
            {{#each releases}}
            <div class="col-md-4">
              <div class="js-lazyYT" data-youtube-id={{youtube}} data-width="210" data-height="157"></div>
              <div class="link"><a href="http://www.discogs.com/release/{{discogs}}">{{title}} by {{artist}}</a></div>
            </div>
            {{/each}}
          </div>
        </div>
          <div>
            <ul class="pagination">
              <li><a href="#/{{user}}/{{list}}/{{first}}">&laquo;</a></li>
              {{#each pages}}
              <li><a href="#/{{user}}/{{list}}/{{page}}" id="page {{page}}">{{page}}</a></li>
              {{/each}}
              <li><a href="#/{{user}}/{{list}}/{{last}}">&raquo;</a></li>
            </ul>
          </div>
      </div>
    
    </div>
</section>
